#include "shell.h"
/**
 * operations_execute - functions for executing commands
 * @command: the commands enterred
 * @args: the arguments entered
 */

void operations_execute(char *command, char *args)
{
	pid_t minor_pid = fork();

	if (minor_pid == -1)
	{
		perror("fork");
		exit(EXIT_FAILURE);
	}
	else if (minor_pid == 0)
	{
		if (execve(command, args, NULL) == -1)
		{
			perror("execve");
			return;
		}
		else
		{
			wait(NULL);
		}
	}
}
